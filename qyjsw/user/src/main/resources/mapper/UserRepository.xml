<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.htqyjsw1.repository.UserRepository">

	<resultMap id="BaseResultMap" type="com.htqyjsw1.entity.TUser" >
		<id column="user_id" property="userId" jdbcType="INTEGER" />
		<result column="user_acc" property="userAcc" jdbcType="VARCHAR" />
		<result column="user_pwd" property="userPwd" jdbcType="VARCHAR" />
		<result column="user_name" property="userName" jdbcType="VARCHAR" />
		<result column="user_nickname" property="userNickname" jdbcType="VARCHAR" />
		<result column="user_age" property="userAge" jdbcType="INTEGER" />
		<result column="user_gender" property="userGender" jdbcType="VARCHAR" />
		<result column="user_tel" property="userTel" jdbcType="VARCHAR" />
		<result column="user_email" property="userEmail" jdbcType="VARCHAR" />
		<result column="user_add" property="userAdd" jdbcType="VARCHAR" />
		<result column="user_position" property="userPosition" jdbcType="VARCHAR" />
		<result column="user_note" property="userNote" jdbcType="VARCHAR" />
	</resultMap>

	<insert id="insert" parameterType="com.htqyjsw1.entity.TUser">
		insert into t_user values(#{user_acc},#{user_pwd},#{user_nickname},
									#{user_age},#{user_gender},#{user_tel},#{user_email},#{user_add},
									#{user_position},#{user_note})
	</insert>
	<insert id="insertSelective" parameterType="com.htqyjsw1.entity.TUser" >
		insert into t_user
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="userAcc != null" >
				user_acc,
			</if>
			<if test="userPwd != null" >
				user_pwd,
			</if>
			<if test="userName != null" >
				user_name,
			</if>
			<if test="userNickname != null" >
				user_nickname,
			</if>
			<if test="userAge != null" >
				user_age,
			</if>
			<if test="userGender != null" >
				user_gender,
			</if>
			<if test="userTel != null" >
				user_tel,
			</if>
			<if test="userEmail != null" >
				user_email,
			</if>
			<if test="userAdd != null" >
				user_add,
			</if>
			<if test="userPosition != null" >
				user_position,
			</if>
			<if test="userNote != null" >
				user_note,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="userAcc != null" >
				#{userAcc},
			</if>
			<if test="userPwd != null" >
				#{userPwd},
			</if>
			<if test="userName != null" >
				#{userName},
			</if>
			<if test="userNickname != null" >
				#{userNickname},
			</if>
			<if test="userAge != null" >
				#{userAge},
			</if>
			<if test="userGender != null" >
				#{userGender},
			</if>
			<if test="userTel != null" >
				#{userTel},
			</if>
			<if test="userEmail != null" >
				#{userEmail},
			</if>
			<if test="userAdd != null" >
				#{userAdd},
			</if>
			<if test="userPosition != null" >
				#{userPosition},
			</if>
			<if test="userNote != null" >
				#{userNote},
			</if>
		</trim>
	</insert>
    <select id="count" resultType="int">
		select count(*) from t_user
	</select>

	<select id="findAll" resultMap="BaseResultMap">
		select * from t_user
	</select>

	<select id="findByPage"  resultMap="BaseResultMap">
		select * from t_user limit #{start}, #{pageSize}
	</select>

	<select id="findById"  resultMap="BaseResultMap">
		select * from t_user where user_id = #{userId}
	</select>

	<select id="findByName"  resultMap="BaseResultMap">
		select * from t_user where user_name like "%"#{userName}"%"
	</select>

	<select id="queryUserByDeptId" resultMap="BaseResultMap" >
         select u.* from t_user u,t_dept_user_rel du where u.user_id = du.user_id and du.dept_id =  #{deptId}
    </select>


	<update id="updateById" parameterType="com.htqyjsw1.entity.TUser" >
		update t_user
		<set >
			<if test="userAcc != null" >
				user_acc = #{userAcc},
			</if>
			<if test="userPwd != null" >
				user_pwd = #{userPwd},
			</if>
			<if test="userNickname != null" >
				user_nickname = #{userNickname},
			</if>
			<if test="userAge != null" >
				user_age = #{userAge,jdbcType=INTEGER},
			</if>
			<if test="userGender != null" >
				user_gender = #{userGender},
			</if>
			<if test="userTel != null" >
				user_tel = #{userTel},
			</if>
			<if test="userEmail != null" >
				user_email = #{userEmail},
			</if>
			<if test="userAdd != null" >
				user_add = #{userAdd},
			</if>
			<if test="userPosition != null" >
				user_position = #{userPosition},
			</if>
			<if test="userNote != null" >
				user_note = #{userNote},
			</if>
		</set>
		where user_id = #{userId}
	</update>

	<delete id="deleteById" parameterType="java.lang.Integer">
		delete from t_user where user_id = #{userId}
	</delete>
</mapper>